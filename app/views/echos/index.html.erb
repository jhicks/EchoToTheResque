<table>
  <tr>
    <th>Name</th>
    <th>Echo</th>
    <th>Created At</th>
    <th>Updated At</th>
  </tr>

<% @echos.each do |echo| %>
  <tr>
    <td><%= echo.name %></td>
    <td><%= echo.echo ? echo.echo : 'Pending' %></td>
    <td><%= echo.created_at %></td>
    <td><%= echo.updated_at if echo.echo %></td>
  </tr>
<% end %>
</table>

<br />

<%= render 'form' %>
